<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <Button
        android:id="@+id/btnNuevoProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nuevo_proyecto" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/btnEditarProyecto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/editar_proyecto" />

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/btnBancoEspecies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/banco_especies" />


    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/btnConfiguraciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/configuraciones" />

</LinearLayout>
